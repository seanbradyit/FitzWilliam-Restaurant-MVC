<web-app>
    
    <display-name>
        Restaurant
    </display-name>
    
    <description>
        Restaurant Description
    </description>
    
    <servlet>
        <servlet-name>RestaurantMenu</servlet-name>
        <description>Menu Presentation</description>
        <servlet-class>RestaurantMenu</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>RestaurantMenu</servlet-name>
        <url-pattern>/Menu</url-pattern>
    </servlet-mapping>
       
</web-app>
